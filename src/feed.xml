---
layout: null
---

<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:media="http://search.yahoo.com/mrss/" xmlns:atom="http://www.w3.org/2005/Atom"> 
  <channel> 
  <title>{{ site.title }}</title>
  <link>{{ site.url }}</link>
  <description>{{ site.description }}</description>
  <language>en-us</language>
  <atom:link href="{{ "/feed.xml" | prepend: site.url }}" rel="self" type="application/rss+xml"/>
  {% for post in site.posts %}
    <item>
      <title>{{ post.title }}</title>
      <link>{{ post.url | prepend: site.url }}</link>
      <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <dc:creator>{{ post.tags | join: ' and ' }}</dc:creator>
      <description><![CDATA[ {{ post.description }} ]]></description> 
      <content:encoded><![CDATA[ <a href="{{ post.url | prepend: site.url }}"><img src="{{ post.img }}"></a> <h2><a href="{{ post.url | prepend: site.url }}">“{{ post.title }}”</a></h2> <p><em>by {{ post.tags | join: ' and ' }}</em></p> <p>{{ post.description }}</p> <p><a href="{{ post.buy }}">Buy a Copy ↗</a></p> ]]></content:encoded>
    </item>
  {% endfor %}
  </channel>
</rss>